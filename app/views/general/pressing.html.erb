<Title>Recky | <%= @record %></Title>

<nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/"><img src="https://i.imgur.com/d7ENmw1.png" alt="Recky logo" height="40"></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/">New search</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/about">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="mailto:oq@recky.io">Contact</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container-fluid">
  <!-- First Element -->
  <div class="row">
    <div class="col-12">
      <h1 class="text-left"><strong><%= @artist %></strong> - <%= @record %></h1>
    </div>
  </div>
</div>

<div class="container-fluid">
  <!-- 1st item: Carousel -->
  <div class="row">
    <div class="col-md-3 mb-2">
      <div class="card border-0">
        <div class="card-body p-0">
          <div id="carouselExampleIndicators" class="carousel slide" data-bs-interval="false">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <% @image_link_array.each_with_index do |an_image, index| %>
                <% unless index.zero? %>
                  <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= index %>" aria-label="Slide <%= index+1 %>"></button>
                <% end %>
              <% end %>
            </div>
            <div class="carousel-inner">
              <% @image_link_array.each_with_index do |an_image, index| %>
                <div class="carousel-item <%= index.zero? ? 'active' : '' %>">
                  <img src="<%= an_image %>" class="d-block w-100" alt="Album cover">
                </div>
              <% end %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
                   </div>
            <a href="/search/explore/<%= @master_id %>">
              <button type="button" class="btn btn-primary w-100" style="margin-top: 10px; margin-bottom: 10px;">See all pressings</button>
            </a>
            <a href="/search/findpressing/<%= @master_id %>">
      <button type="button" class="btn btn-secondary w-100" style="margin-bottom: 10px;">Find a pressing</button>
    </a>
        </div>
      </div>
    </div>
    <!-- 2nd item: pricing -->
    <div class="col-md-3 mb-2">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">ğŸ” Details</h3>
          <p class="card-text"><strong>ğŸ“… Year: </strong><%= @press_year %></p>
          <p class="card-text"><strong>ğŸŒ Country: </strong><% country_name = @press_country %>
            <% country_words = country_name.split(' ') %>
            <% country_words.each do |word| %>
              <%= $country_flags[word] || '' %>
            <% end %>
            <%= @press_country %>
          </p>
          <p class="card-text"><strong>ğŸ·ï¸ Version: </strong><%= @format %> - <%= @release_type %> - <%= @text %></p>
          <p class="card-text"><strong>ğŸ¹ Genre: </strong><%= @genre %></p>
          <p class="card-text"><strong>ğŸ¢ Label: </strong><%= @label %></p>
          <p class="card-text"><strong># Catalogue ID: </strong><%= @catno %></p>
          <p class="card-text"><strong>ğŸ“Ÿ Barcode: </strong><%= @barcode %></p>
        </div>
      </div>
    </div>
    <!-- 3rd item: details -->
    <div class="col-md-3 mb-2">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">ğŸ’µ  Pricing</h3>
          <p class="card-text"><strong>âœ¨ New / like new: </strong><% if @new == "N/A" %>
              <%= @new %>
            <% else %>
              $<%= sprintf("%.2f", @new).to_f %>
            <% end %>
          </p>
          <p class="card-text"><strong>ğŸ‘Œ Used in good condition: </strong><% if @used_excellent == "N/A" %>
              <%= @used_excellent %>
            <% else %>
              $<%= sprintf("%.2f", @used_excellent).to_f %>
            <% end %>
          </p>
          <p class="card-text"><strong>ğŸ¤• Poor working condition: </strong><% if @used_working == "N/A" %>
              <%= @used_working %>
            <% else %>
              $<%= sprintf("%.2f", @used_working).to_f %>
            <% end %>
          </p>
          <a a href="<%= @discogs_buy_link %>" target="_blank">
            <button type="button" class="btn w-100" style="margin-top: 10px; margin-bottom: 10px; background-color: rgba(49,49,48,255); color: white;">Buy on Discogs</button>
          </a>
          <a a href="<%= @ebay_search_link %>" target="_blank">
            <button type="button" class="btn w-100" style="margin-top: 10px; margin-bottom: 10px; background-color: rgba(133,183,22,255); color: white;">Buy on eBay</button>
          </a>
        </div>
      </div>
    </div>
    <!-- 4th item: accordion -->
    <div class="col-md-3 mb-2">
      <div class="accordion" id="accordion">
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
              <strong>Discogs release notes</strong>
            </button>
          </h2>
          <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordion">
            <div class="accordion-body">
              <%= @notes %>
            </div>
          </div>
        </div>
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
              <strong>Tracklist</strong>
            </button>
          </h2>
          <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordion">
            <div class="accordion-body">
              <div class="table-responsive">
                <%= @html_table.html_safe %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
